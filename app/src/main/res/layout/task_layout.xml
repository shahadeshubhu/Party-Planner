<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/oswald"
        android:text="@string/taskName"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tStatusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="@string/notStartedStatus"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/tNameLayout" />

    <TextView
        android:id="@+id/tSubtaskLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="@string/subtaskValue"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tStatusLayout"
        app:layout_constraintTop_toBottomOf="@+id/tStatusLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>